<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/global_bg_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="9" >

    <ImageView
        android:id="@+id/welcome_text_top"
        android:layout_width="98dp"
        android:layout_height="21dp"
        android:layout_centerInParent="true"
        android:layout_weight="2"
        android:src="@drawable/welcome_text_top"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/welcome_text_mid"
        android:layout_width="90dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:src="@drawable/welcome_text_mid"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/welcome_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center" >

        <ImageView
            android:id="@+id/welcome_brush"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerInParent="true"
            android:src="@drawable/welcome_brush_center"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/welcome_refresh_circle"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/welcome_refresh"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/welcome_text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="136dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:src="@drawable/welcome_text_bottom" />
    </RelativeLayout>

</LinearLayout>