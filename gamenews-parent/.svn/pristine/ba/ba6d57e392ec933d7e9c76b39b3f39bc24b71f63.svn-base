<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="@dimen/welcome_logo_width"
        android:layout_height="@dimen/welcome_logo_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/welcome_logo"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/welcome_name_width"
        android:layout_height="@dimen/welcome_name_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:background="@drawable/welcome_text_top"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/img_custom"
        android:layout_width="@dimen/custom_ic_width"
        android:layout_height="@dimen/custom_ic_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/ic_custom"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <Button
        android:id="@+id/dev"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:layout_marginTop="18dp"
        android:background="@drawable/article_list_item_selector"
        android:text="@string/app_dev"
        android:visibility="gone" />

    <Button
        android:id="@+id/pre"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/dev"
        android:layout_alignBottom="@+id/dev"
        android:layout_centerHorizontal="true"
        android:background="@drawable/article_list_item_selector"
        android:text="@string/app_pre"
        android:visibility="gone" />

    <Button
        android:id="@+id/idc"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/dev"
        android:layout_alignBottom="@+id/dev"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/article_list_item_selector"
        android:text="@string/app_idc"
        android:visibility="gone" />

</RelativeLayout>