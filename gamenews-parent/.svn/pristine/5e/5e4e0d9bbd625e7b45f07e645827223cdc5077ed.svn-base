<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/channel_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/channel_image"
            style="@style/channelsDepotColumnItem"
            android:scaleType="fitXY"
            android:src="@drawable/ic_placeholder_big" />

        <ImageView
            style="@style/channelsDepotColumnItem"
            android:src="@drawable/mask_item_rect" />

        <FrameLayout
            android:id="@+id/channel_chosen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >

            <ImageView
                style="@style/channelsDepotColumnItem"
                android:background="@drawable/mask_white_rect" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:src="@drawable/channel_depot_chosen_selector" />
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/channel_name"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="英雄无敌"
        android:textColor="@color/channel_name"
        android:textSize="12.8sp" />

</LinearLayout>