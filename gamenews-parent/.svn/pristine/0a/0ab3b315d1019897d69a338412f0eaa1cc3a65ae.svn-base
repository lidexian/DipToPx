<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gamenews="http://schemas.android.com/apk/res/com.yy.android.gamenews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yy.android.gamenews.ui.view.ActionBar
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        gamenews:isRightImageRound="true"
        gamenews:title="@string/special_title"
        gamenews:drawableLeft="@drawable/actionbar_back_selector"
        gamenews:border_outside_color="@color/global_white" />

    <ListView
        android:id="@+id/special_article_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>